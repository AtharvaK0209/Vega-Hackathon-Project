<% layout('layout/index') %>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            Top Matches for 
            <span class="text-primary">
                <%= userRole === 'startup' ? myProfile.startupName : myProfile.investorName %>
            </span>
        </h2>
        <a href="/<%= userRole %>/dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>

    <% if (matches.length === 0) { %>
        <div class="alert alert-info text-center">
            No matches found yet. Try updating your profile preferences to find more opportunities.
        </div>
    <% } else { %>
        <div class="row">
            <% matches.forEach(match => { %>
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0 fw-bold">
                                <%= userRole === 'startup' ? match.investorName : match.startupName %>
                            </h5>
                            <span class="badge bg-success rounded-pill px-3 py-2">
                                <%= match.matchScore %>% Match
                            </span>
                        </div>
                        <div class="card-body">
                            <% if (userRole === 'startup') { %>
                                <!-- Display Investor Details -->
                                <p class="text-muted mb-1"><i class="bi bi-building"></i> <%= match.firmName || 'Independent Investor' %></p>
                                <p class="mb-2">
                                    <span class="badge bg-light text-dark border me-1"><%= match.preferredStage %></span>
                                    <% match.preferredIndustries.forEach(ind => { %>
                                        <span class="badge bg-info text-dark me-1"><%= ind %></span>
                                    <% }) %>
                                </p>
                                <hr>
                                <div class="row g-2 mb-3">
                                    <div class="col-6">
                                        <small class="text-muted d-block">Investment Range</small>
                                        <strong>$<%= match.minInvestment.toLocaleString() %> - $<%= match.maxInvestment.toLocaleString() %></strong>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted d-block">Type</small>
                                        <strong><%= match.investmentType || 'Any' %></strong>
                                    </div>
                                </div>
                                <p class="card-text small text-secondary"><%= match.bio %></p>

                            <% } else { %>
                                <!-- Display Startup Details -->
                                <p class="text-muted mb-1"><i class="bi bi-geo-alt"></i> <%= match.location %></p>
                                <p class="mb-2">
                                    <span class="badge bg-light text-dark border me-1"><%= match.stage %></span>
                                    <span class="badge bg-warning text-dark me-1"><%= match.industry %></span>
                                </p>
                                <hr>
                                <div class="row g-2 mb-3">
                                    <div class="col-6">
                                        <small class="text-muted d-block">Funding Required</small>
                                        <strong>$<%= match.fundingRequired.toLocaleString() %></strong>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted d-block">Equity Offered</small>
                                        <strong><%= match.equityOffered %>%</strong>
                                    </div>
                                </div>
                                <p class="card-text small text-secondary"><%= match.pitchDescription %></p>
                                <% if (match.tags && match.tags.length > 0) { %>
                                    <div class="mt-2">
                                        <% match.tags.forEach(tag => { %>
                                            <span class="badge bg-secondary me-1"><%= tag %></span>
                                        <% }) %>
                                    </div>
                                <% } %>
                            <% } %>
                        </div>
                        <div class="card-footer bg-white border-top-0 d-flex justify-content-end">
                            <button class="btn btn-outline-primary btn-sm me-2">View Profile</button>
                            <button class="btn btn-primary btn-sm">Connect</button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>
