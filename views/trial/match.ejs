<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Investment Matches | Nexus</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        .match-card {
            border-left: 5px solid #0d6efd;
            transition: transform 0.2s;
        }

        .match-card:hover {
            transform: translateY(-5px);
        }

        .score-circle {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1.1rem;
        }
    </style>
</head>

<body class="bg-light">

    <div class="container py-5">

        <% if(success && success.length> 0){ %>
            <!-- Success Modal Trigger (Hidden) -->
            <input type="hidden" id="successMessage" value="<%= success %>">
            <% } %>

                <% if(error && error.length> 0){ %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= error %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>

                        <div class="d-flex justify-content-between align-items-center mb-5">
                            <div>
                                <h2 class="fw-bold text-dark">Investment Matches</h2>
                                <p class="text-muted">AI-powered recommendations for <strong>
                                        <%= startup.startupName %>
                                    </strong></p>
                            </div>
                            <div>
                                <a href="/connections" class="btn btn-primary me-2">
                                    <i class="bi bi-people"></i> My Connections
                                </a>
                                <a href="/startup/dashboard" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                                </a>
                            </div>
                        </div>

                        <% if (matches.length===0) { %>
                            <div class="text-center py-5">
                                <i class="bi bi-search" style="font-size: 3rem; color: #ccc;"></i>
                                <p class="mt-3 text-muted">No investors found in our database yet.</p>
                            </div>
                            <% } %>

                                <div class="row">
                                    <% matches.forEach(match=> { %>
                                        <div class="col-12 mb-4">
                                            <div class="card match-card shadow-sm">
                                                <div class="card-body p-4">
                                                    <div class="row align-items-center">

                                                        <div class="col-md-7">
                                                            <h4 class="fw-bold mb-1">
                                                                <%= match.investor.investorName %>
                                                            </h4>
                                                            <p class="text-primary mb-2">
                                                                <i class="bi bi-building"></i>
                                                                <%= match.investor.firmName || 'Independent Investor' %>
                                                            </p>

                                                            <div class="mb-3">
                                                                <% match.investor.preferredIndustries.forEach(industry=>
                                                                    { %>
                                                                    <span class="badge bg-light text-dark border">
                                                                        <%= industry %>
                                                                    </span>
                                                                    <% }) %>
                                                            </div>

                                                            <div
                                                                class="bg-light p-3 rounded-3 border-start border-info border-4">
                                                                <small
                                                                    class="text-uppercase fw-bold text-info d-block mb-1">
                                                                    <i class="bi bi-robot"></i> Gemini Insight
                                                                </small>
                                                                <p class="mb-0 small text-dark">
                                                                    <%= match.reasoning %>
                                                                </p>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-5 mt-3 mt-md-0 border-start ps-md-4">
                                                            <div class="d-flex align-items-center mb-3">
                                                                <div
                                                                    class="score-circle <%= match.score >= 80 ? 'bg-success text-white' : 'bg-warning text-dark' %> me-3">
                                                                    <%= match.score %>%
                                                                </div>
                                                                <div>
                                                                    <h6 class="mb-0 fw-bold">Compatibility Score</h6>
                                                                    <small class="text-muted">Based on industry, stage &
                                                                        budget</small>
                                                                </div>
                                                            </div>

                                                            <div class="row g-2 small mb-3">
                                                                <div class="col-6">
                                                                    <strong>Stage:</strong>
                                                                    <%= match.investor.preferredStage %>
                                                                </div>
                                                                <div class="col-6">
                                                                    <strong>Location:</strong>
                                                                    <%= match.investor.locationPreference %>
                                                                </div>
                                                                <div class="col-12">
                                                                    <strong>Range:</strong> ₹<%=
                                                                        match.investor.minInvestment.toLocaleString() %>
                                                                        - ₹<%=
                                                                            match.investor.maxInvestment.toLocaleString()
                                                                            %>
                                                                </div>
                                                            </div>

                                                            <button class="btn btn-primary w-100" data-bs-toggle="modal"
                                                                data-bs-target="#investorModal<%= match.investor._id %>">
                                                                <i class="bi bi-eye"></i> View Details & Connect
                                                            </button>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Investor Detail Modal -->
                                        <div class="modal fade" id="investorModal<%= match.investor._id %>"
                                            tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title fw-bold">Investor Profile</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row">
                                                            <div class="col-md-4 text-center border-end">
                                                                <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                                                                    style="width: 100px; height: 100px;">
                                                                    <i
                                                                        class="bi bi-person-fill display-4 text-secondary"></i>
                                                                </div>
                                                                <h5 class="fw-bold">
                                                                    <%= match.investor.investorName %>
                                                                </h5>
                                                                <p class="text-muted small">
                                                                    <%= match.investor.firmName %>
                                                                </p>
                                                                <p class="text-muted small"><i
                                                                        class="bi bi-envelope"></i>
                                                                    <%= match.investor.email %>
                                                                </p>
                                                                <p class="badge bg-primary">
                                                                    <%= match.investor.investmentType %>
                                                                </p>
                                                            </div>
                                                            <div class="col-md-8">
                                                                <h6 class="fw-bold">Bio / Thesis</h6>
                                                                <p class="text-muted">
                                                                    <%= match.investor.bio || "No bio available." %>
                                                                </p>

                                                                <% if (match.pros) { %>
                                                                    <div class="alert alert-success py-2 mb-2">
                                                                        <small class="fw-bold"><i
                                                                                class="bi bi-hand-thumbs-up-fill"></i>
                                                                            Why a good choice:</small>
                                                                        <p class="mb-0 small">
                                                                            <%= match.pros %>
                                                                        </p>
                                                                    </div>
                                                                    <% } %>

                                                                        <% if (match.cons) { %>
                                                                            <div class="alert alert-warning py-2 mb-2">
                                                                                <small class="fw-bold"><i
                                                                                        class="bi bi-exclamation-triangle-fill"></i>
                                                                                    Potential Risks:</small>
                                                                                <p class="mb-0 small">
                                                                                    <%= match.cons %>
                                                                                </p>
                                                                            </div>
                                                                            <% } %>

                                                                                <hr>

                                                                                <div class="row g-3">
                                                                                    <div class="col-6">
                                                                                        <small
                                                                                            class="text-muted d-block">Investment
                                                                                            Range</small>
                                                                                        <strong>₹<%=
                                                                                                match.investor.minInvestment.toLocaleString()
                                                                                                %> - ₹<%=
                                                                                                    match.investor.maxInvestment.toLocaleString()
                                                                                                    %></strong>
                                                                                    </div>
                                                                                    <div class="col-6">
                                                                                        <small
                                                                                            class="text-muted d-block">Preferred
                                                                                            Stage</small>
                                                                                        <strong>
                                                                                            <%= match.investor.preferredStage
                                                                                                %>
                                                                                        </strong>
                                                                                    </div>
                                                                                    <div class="col-12">
                                                                                        <small
                                                                                            class="text-muted d-block">Sectors
                                                                                            of Interest</small>
                                                                                        <div>
                                                                                            <%
                                                                                                match.investor.preferredIndustries.forEach(ind=>
                                                                                                { %>
                                                                                                <span
                                                                                                    class="badge bg-secondary me-1">
                                                                                                    <%= ind %>
                                                                                                </span>
                                                                                                <% }) %>
                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                            </div>
                                                        </div>

                                                        <hr class="my-4">

                                                        <h5 class="fw-bold mb-3">Send Connection Request</h5>
                                                        <form action="/connect" method="POST">
                                                            <input type="hidden" name="receiverId"
                                                                value="<%= match.investor.userId %>">
                                                            <div class="mb-3">
                                                                <label class="form-label">Message to Investor</label>
                                                                <textarea name="message" class="form-control" rows="3"
                                                                    placeholder="Hi, I'd like to connect regarding my startup <%= startup.startupName %>..."></textarea>
                                                            </div>
                                                            <div class="d-flex justify-content-end">
                                                                <button type="button" class="btn btn-secondary me-2"
                                                                    data-bs-dismiss="modal">Close</button>
                                                                <button type="submit" class="btn btn-primary">
                                                                    <i class="bi bi-send"></i> Send Request
                                                                </button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <% }) %>
                                </div>
    </div>

    <!-- Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center p-4">
                <div class="modal-body">
                    <div class="mb-3 text-success">
                        <i class="bi bi-check-circle-fill display-1"></i>
                    </div>
                    <h4 class="fw-bold">Success!</h4>
                    <p class="text-muted" id="modalMessage"></p>
                    <button type="button" class="btn btn-success px-4 mt-3" data-bs-dismiss="modal">Awesome</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Check for success message and show modal
        document.addEventListener("DOMContentLoaded", function () {
            const successInput = document.getElementById("successMessage");
            if (successInput && successInput.value.trim() !== "") {
                const successModal = new bootstrap.Modal(document.getElementById('successModal'));
                document.getElementById("modalMessage").textContent = successInput.value;
                successModal.show();
            }
        });
    </script>
</body>

</html>