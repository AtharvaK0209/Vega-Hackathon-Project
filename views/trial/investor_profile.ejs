<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Investor Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet"
href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/public/style.css">
</head>
<style>

/* ===============================
   GLOBAL
================================ */

@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

body{
    font-family:'Inter',sans-serif;
    background:
        radial-gradient(circle at 10% 20%, #dbeafe 0%, transparent 40%),
        radial-gradient(circle at 90% 80%, #dcfce7 0%, transparent 40%),
        #f8fafc;
}

/* ===============================
   NAVBAR
================================ */

.navbar{
    background:rgba(255,255,255,.85)!important;
    backdrop-filter:blur(12px);
}

.navbar-brand{
    font-weight:700;
    background:linear-gradient(90deg,#2563EB,#6366F1,#22C55E);
    -webkit-background-clip:text;
    background-clip:text;
    -webkit-text-fill-color:transparent;
}

/* ===============================
   HEADER
================================ */

.bg-light{
    background:linear-gradient(135deg,#eef2ff,#f8fafc)!important;
}

/* ===============================
   FORM CARDS
================================ */

.form-card{
    background:rgba(255,255,255,.92);
    border-radius:18px;
    padding:30px;
    border:1px solid rgba(0,0,0,0.05);
    transition:.3s ease;
}

.form-card:hover{
    transform:translateY(-4px);
    box-shadow:0 20px 45px rgba(0,0,0,0.12);
}

/* ===============================
   INPUTS
================================ */

.form-control,
.form-select{
    border-radius:12px;
    padding:12px;
}

.form-control:focus,
.form-select:focus{
    border-color:#6366F1;
    box-shadow:0 0 0 3px rgba(99,102,241,.15);
}

/* ===============================
   CHECKBOX GRID (IMPORTANT)
================================ */

.form-check{
    background:#f8fafc;
    border-radius:10px;
    padding:10px 14px;
    margin-bottom:10px;
    transition:.25s;
}

.form-check:hover{
    background:#eef2ff;
    transform:translateX(4px);
}

/* ===============================
   BUTTON
================================ */

.btn-primary{
    background:linear-gradient(135deg,#2563EB,#6366F1);
    border:none;
    border-radius:14px;
    transition:.25s;
}

.btn-primary:hover{
    transform:translateY(-2px);
    box-shadow:0 15px 30px rgba(99,102,241,.35);
}

/* ===============================
   SOCIAL ICONS
================================ */

.social-icons{
    display:flex;
    justify-content:center;
    gap:18px;
}

.social-link{
    font-size:22px;
    color:#94a3b8;
    transition:.3s;
}

.social-link:hover{
    color:#6366F1;
    transform:translateY(-6px) scale(1.2);
}

/* ===============================
   RESPONSIVE DESIGN
================================ */

/* Tablet */
@media (max-width:992px){
    section{
        padding-left:15px;
        padding-right:15px;
    }
}

/* Mobile */
@media (max-width:768px){

    .form-card{
        padding:22px;
    }

    h2{
        font-size:1.6rem;
    }

    .btn-lg{
        width:100%;
    }
}

/* Small Mobile */
@media (max-width:480px){

    .container{
        padding-left:18px;
        padding-right:18px;
    }

}

footer{
    margin-top: auto;
}
</style>
<body>
    
<!-- NAVBAR -->
<nav class="navbar bg-white shadow-sm">
  <div class="container">

    <!-- Logo -->
    <a class="navbar-brand fw-bold text-primary">Nexus</a>

    <!-- Right Side -->
    <div class="ms-auto">
      <a href="/logout" class="btn btn-outline-danger btn-sm">
        <i class="bi bi-box-arrow-right"></i> Logout
      </a>
    </div>

  </div>
</nav>


<!-- HEADER -->
<section class="py-5 text-center bg-light">
  <div class="container">
    <h2 class="fw-bold">Investor Preference Setup</h2>
    <p class="text-muted">
      Define your investment interests to discover aligned startups.
    </p>
  </div>
</section>


<!-- FORM -->
<section class="py-5">
<div class="container">

<form method="POST" action="/investor/profile">

    <div class="form-card mb-4">
        <h4 class="mb-3">Investor Information</h4>
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Investor Name</label>
                <input type="text" name="investorName" class="form-control" placeholder="Full name" value="<%= investor.investorName || '' %>" required>
            </div>
            <div class="col-md-6">
                <label class="form-label">Organization / Firm</label>
                <input type="text" name="organization" class="form-control" placeholder="Company or VC firm" value="<%= investor.firmName || '' %>">
            </div>
            <div class="col-md-6">
                <label class="form-label">Email</label>
                <input type="email" name="investorEmail" class="form-control" placeholder="investor@email.com" value="<%= investor.email || '' %>">
            </div>
            <div class="col-md-6">
                <label class="form-label">Location Preference</label>
                <input type="text" name="locationPreference" class="form-control" placeholder="India / Global / City" value="<%= investor.locationPreference || '' %>">
            </div>
        </div>
    </div>

    <div class="form-card mb-4">
        <h4 class="mb-3">Investment Preferences</h4>
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Minimum Investment (₹)</label>
                <input type="number" name="minInvestment" class="form-control" placeholder="e.g. 1000000" value="<%= investor.minInvestment || '' %>" required>
            </div>
            <div class="col-md-6">
                <label class="form-label">Maximum Investment (₹)</label>
                <input type="number" name="maxInvestment" class="form-control" placeholder="e.g. 50000000" value="<%= investor.maxInvestment || '' %>" required>
            </div>
            <div class="col-md-6">
                <label class="form-label">Preferred Startup Stage</label>
                <select name="preferredStage" class="form-select">
                    <% const stages = ["Idea", "Pre-Seed", "Seed", "Series A", "Growth Stage"]; %>
                    <% stages.forEach(stg => { %>
                        <option value="<%= stg %>" <%= (investor.preferredStage === stg) ? 'selected' : '' %>><%= stg %></option>
                    <% }) %>
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label">Investment Type</label>
                <select name="investmentType" class="form-select">
                    <% const types = ["Equity", "Debt", "Convertible Note", "Any"]; %>
                    <% types.forEach(type => { %>
                        <option value="<%= type %>" <%= (investor.investmentType === type) ? 'selected' : '' %>><%= type %></option>
                    <% }) %>
                </select>
            </div>
        </div>
    </div>

    <div class="form-card mb-4">
        <h4 class="mb-3">Sector Interests</h4>
        <div class="row">
            <% const sectors = ["FinTech", "HealthTech", "EdTech", "AI / ML"]; %>
            <% const currentSectors = investor.preferredIndustries || []; %>
            <% sectors.forEach(sector => { %>
                <div class="col-md-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="sectors" value="<%= sector %>" <%= currentSectors.includes(sector) ? 'checked' : '' %>>
                        <label class="form-check-label"><%= sector %></label>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <div class="form-card mb-4">
        <h4 class="mb-3">Additional Notes</h4>
        <textarea name="additionalNotes" class="form-control" rows="4" placeholder="Mention special investment interests..."><%= investor.bio || '' %></textarea>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary btn-lg px-5">
            <%= investor.investorName ? 'Update Preferences' : 'Save Preferences' %>
        </button>
    </div>
</form>

</div>
</section>


<!-- FOOTER -->
<footer class="bg-dark text-white mt-5">
  <div class="container text-center py-4">

    <h5 class="fw-bold">Nexus</h5>

    <p class="text-secondary">
      Intelligent Startup–Investor Matchmaking Platform
    </p>

    <div class="social-icons my-3">
      <a href="#" class="social-link"><i class="bi bi-instagram"></i></a>
      <a href="#" class="social-link"><i class="bi bi-facebook"></i></a>
      <a href="#" class="social-link"><i class="bi bi-youtube"></i></a>
      <a href="#" class="social-link"><i class="bi bi-twitter-x"></i></a>
      <a href="#" class="social-link"><i class="bi bi-linkedin"></i></a>
    </div>

    <small class="text-secondary">
      © 2026 Nexus — Startup India Initiative Hackathon Prototype | All rights reserved.
    </small>

  </div>
</footer>

</body>
</html>
