<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nexus - Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/style.css">
    <link rel="stylesheet"
href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<style>

/* ===============================
   GLOBAL
================================ */

@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

body{
    font-family:'Inter',sans-serif;
    background:
        radial-gradient(circle at 10% 20%, #dbeafe 0%, transparent 40%),
        radial-gradient(circle at 90% 80%, #dcfce7 0%, transparent 40%),
        #f8fafc;
}

/* ===============================
   PAGE WRAPPER
================================ */

.profile-wrapper{
    padding:60px 0;
}

/* ===============================
   NAVBAR
================================ */

.navbar{
    background:rgba(255,255,255,.85)!important;
    backdrop-filter:blur(12px);
}

.navbar-brand{
    font-weight:700;
    background:linear-gradient(90deg,#2563EB,#6366F1,#22C55E);
    background-clip:text;
    -webkit-background-clip:text;
    -webkit-text-fill-color:transparent;
}


/* ===============================
   FORM CARDS
================================ */

.form-card{
    background:rgba(255,255,255,.92);
    border-radius:18px;
    padding:30px;
    border:1px solid rgba(0,0,0,0.05);
    transition:.3s ease;
}

.form-card:hover{
    transform:translateY(-4px);
    box-shadow:0 20px 45px rgba(0,0,0,0.12);
}

/* SECTION TITLES */

.form-card h4{
    font-weight:600;
    margin-bottom:20px;
}

/* ===============================
   INPUTS
================================ */

.form-control,
.form-select{
    border-radius:12px;
    padding:12px;
}

.form-control:focus,
.form-select:focus{
    border-color:#6366F1;
    box-shadow:0 0 0 3px rgba(99,102,241,.15);
}

/* ===============================
   BUTTON
================================ */

.btn-primary{
    background:linear-gradient(135deg,#2563EB,#6366F1);
    border:none;
    border-radius:14px;
    transition:.25s;
}

.btn-primary:hover{
    transform:translateY(-2px);
    box-shadow:0 15px 30px rgba(99,102,241,.35);
}

/* ===============================
   RESPONSIVE DESIGN
================================ */

/* Tablet */
@media (max-width:992px){
    .profile-wrapper{
        padding:40px 15px;
    }
}

/* Mobile */
@media (max-width:768px){

    .form-card{
        padding:22px;
    }

    h4{
        font-size:1.2rem;
    }

    .btn-lg{
        width:100%;
    }
}

/* Small mobile */
@media (max-width:480px){

    .container{
        padding-left:18px;
        padding-right:18px;
    }

}

footer{
    margin-top: auto;
}
</style>
<body>
    <nav class="navbar navbar-light shadow-sm">
  <div class="container">
    <a class="navbar-brand fw-bold text-primary" href="/">Nexus</a>
  </div>


    <div class="ms-auto" style="margin: 10px;">
      <a href="/logout" class="btn btn-outline-danger btn-sm">
        <i class="bi bi-box-arrow-right"></i> Logout
      </a>
    </div>
</nav>
    <section class="profile-wrapper">
<div class="container">
<form method="POST" action="/startup/profile">

        <!-- BASIC INFO -->
        <div class="form-card mb-4">
            <h4 class="mb-3">Basic Information</h4>

            <div class="row g-3">

                <div class="col-md-6">
                    <label class="form-label">Startup Name</label>
                    <input type="text" name="startupName" class="form-control" value="<%= startup.startupName || '' %>"
                        required>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Location</label>
                    <input type="text" name="location" class="form-control" value="<%= startup.location || '' %>"
                        required>
                </div>

            </div>
        </div>


        <!-- STARTUP DETAILS -->
        <div class="form-card mb-4">
            <h4 class="mb-3">Startup Details</h4>

            <div class="row g-3">

                <div class="col-md-6">
                    <label class="form-label">Industry</label>
                    <select name="industry" class="form-select" required>
                        <option value="">Select sector</option>
                        <% const industries=["FinTech", "HealthTech" , "EdTech" , "AI / ML" , "SaaS" ]; %>
                            <% industries.forEach(ind=> { %>
                                <option value="<%= ind %>" <%=(startup.industry===ind) ? 'selected' : '' %>><%= ind %>
                                </option>
                                <% }) %>
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Funding Stage</label>
                    <select name="stage" class="form-select" required>
                        <% const stages=["Idea", "Pre-Seed" , "Seed" , "Early" , "Growth" ]; %>
                            <% stages.forEach(stg=> { %>
                                <option value="<%= stg %>" <%=(startup.stage===stg) ? 'selected' : '' %>><%= stg %>
                                </option>
                                <% }) %>
                    </select>
                </div>

                <div class="col-12">
                    <label class="form-label">Startup Description</label>
                    <textarea name="pitchDescription" class="form-control" rows="4"
                        required><%= startup.pitchDescription || '' %></textarea>
                </div>

            </div>
        </div>


        <!-- FUNDING INFO -->
        <div class="form-card mb-4">
            <h4 class="mb-3">Funding Information</h4>

            <div class="row g-3">

                <div class="col-md-6">
                    <label class="form-label">Funding Required (₹)</label>
                    <input type="number" name="fundingRequired" class="form-control"
                        value="<%= startup.fundingRequired || '' %>" required>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Equity Offered (%)</label>
                    <input type="number" name="equityOffered" class="form-control"
                        value="<%= startup.equityOffered || '' %>">
                </div>

                <div class="col-md-6">
                    <label class="form-label">Team Size</label>
                    <input type="number" name="teamSize" class="form-control" value="<%= startup.teamSize || '' %>">
                </div>

                <div class="col-md-6">
                    <label class="form-label">Revenue Status</label>
                    <select name="revenueStatus" class="form-select">
                        <% const statuses=["Pre-Revenue", "Revenue Generating" , "Profitable" ]; %>
                            <% statuses.forEach(stat=> { %>
                                <option value="<%= stat %>" <%=(startup.revenueStatus===stat) ? 'selected' : '' %>><%=
                                        stat %>
                                </option>
                                <% }) %>
                    </select>
                </div>

                <div class="col-12">
                    <label class="form-label">Tags (comma separated)</label>
                    <input type="text" name="tags" class="form-control"
                        value="<%= (startup.tags && startup.tags.length) ? startup.tags.join(',') : '' %>">
                </div>

            </div>
        </div>

        <div class="text-center">
            <button class="btn btn-primary btn-lg px-5">
                <%= startup.startupName ? 'Update Profile' : 'Save Profile' %>
            </button>
        </div>

    </form>
    </form>
</div>
</section>
<footer class="bg-dark text-white mt-5">
  <div class="container text-center py-4">

    <h5 class="fw-bold mb-2">Nexus</h5>

    <p class="text-secondary">
      Intelligent Startup–Investor Matchmaking Platform
    </p>

    <!-- SOCIAL ICONS -->
    <div class="social-icons my-3">

      <a href="#" class="social-link">
        <i class="bi bi-instagram"></i>
      </a>

      <a href="#" class="social-link">
        <i class="bi bi-facebook"></i>
      </a>

      <a href="#" class="social-link">
        <i class="bi bi-youtube"></i>
      </a>

      <a href="#" class="social-link">
        <i class="bi bi-twitter-x"></i>
      </a>

      <a href="#" class="social-link">
        <i class="bi bi-linkedin"></i>
      </a>

    </div>

    <small class="text-secondary">
      © 2026 Nexus — Startup India Initiative Hackathon Prototype | All rights reserved.
    </small>

  </div>
</footer>

</body>

</html>