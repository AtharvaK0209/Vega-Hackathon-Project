<!-- PAGE HEADER -->
<section class="py-5 text-center bg-light">
  <div class="container">
    <h2 class="fw-bold">Create Your Startup Profile</h2>
    <p class="text-muted">
      Help investors understand your startup through structured information.
    </p>
  </div>
</section>


<!-- FORM SECTION -->
<section class="py-5">
<div class="container">

<form class="profile-form">

<!-- BASIC INFO -->
<div class="form-card mb-4">
<h4 class="mb-3">Basic Information</h4>

<div class="row g-3">
<div class="col-md-6">
<label class="form-label">Startup Name</label>
<input type="text" class="form-control" placeholder="Enter startup name">
</div>

<div class="col-md-6">
<label class="form-label">Founder Name</label>
<input type="text" class="form-control" placeholder="Founder full name">
</div>

<div class="col-md-6">
<label class="form-label">Email</label>
<input type="email" class="form-control" placeholder="contact@startup.com">
</div>

<div class="col-md-6">
<label class="form-label">Location</label>
<input type="text" class="form-control" placeholder="City, Country">
</div>
</div>
</div>


<!-- STARTUP DETAILS -->
<div class="form-card mb-4">
<h4 class="mb-3">Startup Details</h4>

<div class="row g-3">

<div class="col-md-6">
<label class="form-label">Sector</label>
<select class="form-select">
<option selected>Select sector</option>
<option>FinTech</option>
<option>HealthTech</option>
<option>EdTech</option>
<option>AI / ML</option>
<option>SaaS</option>
</select>
</div>

<div class="col-md-6">
<label class="form-label">Funding Stage</label>
<select class="form-select">
<option>Idea</option>
<option>Pre-Seed</option>
<option>Seed</option>
<option>Series A</option>
</select>
</div>

<!-- DESCRIPTION -->
<div class="col-12">
<label class="form-label">Startup Description</label>
<textarea class="form-control" rows="4"
placeholder="Describe your startup, problem solved, business model, and target users"></textarea>
</div>

<!-- DOCUMENT UPLOAD -->
<div class="col-12">
<label class="form-label">ðŸ“„ Upload Pitch Deck / Documents (PDF)</label>

<input type="file"
class="form-control"
accept=".pdf,.doc,.docx">

<div class="form-text">
Upload pitch deck, business plan, or supporting documents (PDF/DOC).
</div>
</div>

</div>
</div>


<!-- FUNDING INFO -->
<div class="form-card mb-4">
<h4 class="mb-3">Funding Information</h4>

<div class="row g-3">

<div class="col-md-6">
<label class="form-label">Funding Required (â‚¹)</label>
<input type="number" class="form-control" placeholder="e.g. 5000000">
</div>

<div class="col-md-6">
<label class="form-label">Team Size</label>
<input type="number" class="form-control" placeholder="Number of members">
</div>

<div class="col-12">
<label class="form-label">Website / Pitch Deck Link</label>
<input type="url" class="form-control" placeholder="https://">
</div>

</div>
</div>


<!-- SUBMIT -->
<div class="text-center">
<button class="btn btn-primary btn-lg px-5">
Save Profile
</button>
</div>

</form>

</div>
</section>

