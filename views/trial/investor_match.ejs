<!DOCTYPE html>
<html lang="en">
<head>
    <title>Startup Matches | Nexus</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="bg-light">

<div class="container py-5">
    
    <% if(success && success.length > 0){ %>
        <!-- Success Modal Trigger (Hidden) -->
        <input type="hidden" id="successMessage" value="<%= success %>">
    <% } %>
    
    <% if(error && error.length > 0){ %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Top Startup Picks for <%= investor.investorName %></h2>
            <p class="text-muted">AI-powered deal flow matching your thesis</p>
        </div>
        <div>
            <a href="/connections" class="btn btn-primary me-2">
                <i class="bi bi-people"></i> My Connections
            </a>
            <a href="/investor/dashboard" class="btn btn-outline-dark">Dashboard</a>
        </div>
    </div>

    <% if (matches.length === 0) { %>
        <div class="alert alert-info">No startups are currently available for matching.</div>
    <% } %>

    <div class="row">
        <% matches.forEach(match => { %>
            <div class="col-md-6 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="badge bg-dark text-uppercase"><%= match.startup.stage %></span>
                            <span class="fw-bold <%= match.score > 70 ? 'text-success' : 'text-primary' %>">
                                <%= match.score %>% Match
                            </span>
                        </div>
                        
                        <h4 class="card-title fw-bold"><%= match.startup.startupName %></h4>
                        <p class="text-muted small mb-3"><%= match.startup.industry %> • <%= match.startup.location %></p>
                        
                        <div class="bg-info bg-opacity-10 p-3 rounded mb-3 border-start border-info border-4">
                            <h6 class="fw-bold mb-1"><i class="bi bi-robot"></i> Investment Thesis Fit</h6>
                            <p class="small mb-0"><%= match.reasoning %></p>
                        </div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <small class="text-muted d-block">Funding Goal</small>
                                <span class="fw-bold">₹<%= match.startup.fundingRequired.toLocaleString() %></span>
                            </div>
                            <div class="col-6">
                                <small class="text-muted d-block">Equity Offered</small>
                                <span class="fw-bold text-danger"><%= match.startup.equityOffered %>%</span>
                            </div>
                        </div>

                        <button class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#startupModal<%= match.startup._id %>">
                            <i class="bi bi-eye"></i> View Details & Connect
                        </button>
                    </div>
                </div>
            </div>

            <!-- Startup Detail Modal -->
            <div class="modal fade" id="startupModal<%= match.startup._id %>" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title fw-bold">Startup Profile</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-4 text-center border-end">
                                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 100px; height: 100px;">
                                        <i class="bi bi-rocket-takeoff display-4 text-secondary"></i>
                                    </div>
                                    <h5 class="fw-bold"><%= match.startup.startupName %></h5>
                                    <p class="text-muted small"><%= match.startup.location %></p>
                                    <p class="text-muted small"><i class="bi bi-envelope"></i> <%= match.startup.userId ? match.startup.userId.email : 'No email' %></p>
                                    <p class="badge bg-success"><%= match.startup.industry %></p>
                                </div>
                                <div class="col-md-8">
                                    <h6 class="fw-bold">Pitch</h6>
                                    <p class="text-muted"><%= match.startup.pitchDescription %></p>

                                    <% if (match.pros) { %>
                                        <div class="alert alert-success py-2 mb-2">
                                            <small class="fw-bold"><i class="bi bi-graph-up-arrow"></i> Investment Upside:</small>
                                            <p class="mb-0 small"><%= match.pros %></p>
                                        </div>
                                    <% } %>

                                    <% if (match.cons) { %>
                                        <div class="alert alert-warning py-2 mb-2">
                                            <small class="fw-bold"><i class="bi bi-shield-exclamation"></i> Risks:</small>
                                            <p class="mb-0 small"><%= match.cons %></p>
                                        </div>
                                    <% } %>

                                    <hr>

                                    <div class="row g-3">
                                        <div class="col-6">
                                            <small class="text-muted d-block">Funding Required</small>
                                            <strong>₹<%= match.startup.fundingRequired.toLocaleString() %></strong>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted d-block">Equity Offered</small>
                                            <strong><%= match.startup.equityOffered %>%</strong>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted d-block">Team Size</small>
                                            <strong><%= match.startup.teamSize %></strong>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted d-block">Revenue Status</small>
                                            <strong><%= match.startup.revenueStatus %></strong>
                                        </div>
                                        <div class="col-12">
                                            <small class="text-muted d-block">Tags</small>
                                            <div>
                                                <% match.startup.tags.forEach(tag => { %>
                                                    <span class="badge bg-secondary me-1"><%= tag %></span>
                                                <% }) %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <hr class="my-4">
                            
                            <h5 class="fw-bold mb-3">Send Connection Request</h5>
                            <form action="/connect" method="POST">
                                <input type="hidden" name="receiverId" value="<%= match.startup.userId._id %>">
                                <div class="mb-3">
                                    <label class="form-label">Message to Founder</label>
                                    <textarea name="message" class="form-control" rows="3" placeholder="Hi, I'm interested in learning more about <%= match.startup.startupName %>..."></textarea>
                                </div>
                                <div class="d-flex justify-content-end">
                                    <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-send"></i> Send Request
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        <% }) %>
    </div>
</div>

<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content text-center p-4">
      <div class="modal-body">
        <div class="mb-3 text-success">
            <i class="bi bi-check-circle-fill display-1"></i>
        </div>
        <h4 class="fw-bold">Success!</h4>
        <p class="text-muted" id="modalMessage"></p>
        <button type="button" class="btn btn-success px-4 mt-3" data-bs-dismiss="modal">Awesome</button>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Check for success message and show modal
    document.addEventListener("DOMContentLoaded", function() {
        const successInput = document.getElementById("successMessage");
        if (successInput && successInput.value.trim() !== "") {
            const successModal = new bootstrap.Modal(document.getElementById('successModal'));
            document.getElementById("modalMessage").textContent = successInput.value;
            successModal.show();
        }
    });
</script>
</body>
</html>
