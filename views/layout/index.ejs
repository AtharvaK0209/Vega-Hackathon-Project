/* ===============================
   STRIPE + LINEAR AI DESIGN SYSTEM
================================ */

body{
    font-family:'Inter',sans-serif;
    background:
        radial-gradient(circle at 10% 20%, #dbeafe 0%, transparent 40%),
        radial-gradient(circle at 90% 80%, #dcfce7 0%, transparent 40%),
        #f8fafc;
    color:#0f172a;
    overflow-x:hidden;
}

/* ===============================
   GLASS NAVBAR
================================ */

.navbar{
    background:rgba(255,255,255,0.75)!important;
    backdrop-filter:blur(14px);
    border-bottom:1px solid rgba(0,0,0,0.05);
}

.navbar-brand{
    font-weight:700;
    background:linear-gradient(90deg,#2563EB,#6366F1,#22C55E);
    -webkit-background-clip:text;
    background-clip:text;
    -webkit-text-fill-color:transparent;
}

/* ===============================
   HERO SECTION
================================ */

.hero{
    min-height:90vh;
    position:relative;
}

/* AI glow layer */
.hero::before{
    content:"";
    position:absolute;
    inset:0;
    background:
        radial-gradient(circle at 50% 0%,
        rgba(99,102,241,0.25),
        transparent 60%);
    pointer-events:none;
}

/* TEXT ANIMATION */

.hero h1{
    font-weight:700;
    letter-spacing:-1px;
    animation:fadeUp 1s ease forwards;
}

.hero p{
    animation:fadeUp 1.2s ease forwards;
}

.hero button{
    animation:fadeUp 1.4s ease forwards;
}

@keyframes fadeUp{
    from{
        opacity:0;
        transform:translateY(40px);
    }
    to{
        opacity:1;
        transform:translateY(0);
    }
}

/* FLOATING HERO IMAGE */

.hero img{
    animation:floatAI 5s ease-in-out infinite;
}

@keyframes floatAI{
    0%,100%{transform:translateY(0);}
    50%{transform:translateY(-14px);}
}

/* ===============================
   BUTTON SYSTEM
================================ */

.btn{
    border-radius:14px;
    font-weight:500;
    transition:all .25s ease;
}

.btn-primary{
    background:linear-gradient(135deg,#2563EB,#6366F1);
    border:none;
}

.btn-primary:hover{
    transform:translateY(-2px);
    box-shadow:0 15px 30px rgba(99,102,241,.35);
}

/* SHIMMER EFFECT */

.btn-primary::after{
    content:"";
    position:absolute;
    top:0;
    left:-100%;
    width:100%;
    height:100%;
    background:linear-gradient(
        120deg,
        transparent,
        rgba(255,255,255,.6),
        transparent
    );
    transition:.6s;
}

.btn-primary:hover::after{
    left:100%;
}

/* ===============================
   FEATURE CARDS (LINEAR STYLE)
================================ */

.card{
    border-radius:18px;
    background:rgba(255,255,255,0.8);
    backdrop-filter:blur(12px);
    border:1px solid rgba(0,0,0,0.05);
    transition:all .35s ease;
    overflow:hidden;
}

.card:hover{
    transform:translateY(-12px);
    box-shadow:
        0 25px 50px rgba(0,0,0,0.12),
        0 0 0 1px rgba(99,102,241,0.2);
}

/* LIGHT SWEEP */

.card::before{
    content:"";
    position:absolute;
    inset:0;
    background:linear-gradient(
        120deg,
        transparent,
        rgba(99,102,241,0.15),
        transparent
    );
    opacity:0;
    transition:.4s;
}

.card:hover::before{
    opacity:1;
}

/* ===============================
   SECTION SPACING
================================ */

section{
    padding:90px 0;
}

/* ===============================
   HEADINGS
================================ */

h2{
    font-weight:700;
    letter-spacing:-0.5px;
}

/* ===============================
   SOCIAL ICONS
================================ */

.social-icons{
